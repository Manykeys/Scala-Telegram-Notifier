<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %red(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.quartz" level="INFO" />
    <logger name="sttp.client3" level="INFO" />

    <logger name="scrapper" level="INFO" />

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
